<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ================================================================== -->
    <!-- META & PAGE SETTINGS -->
    <!-- ================================================================== -->
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- ================================================================== -->
    <!-- TITLE -->
    <!-- ================================================================== -->
    <title>@ViewData["Title"] - DronePilot</title>

    <!-- ================================================================== -->
    <!-- LIBRARIES & FRAMEWORKS -->
    <!-- ================================================================== -->
    <!-- Three.js for 3D rendering -->
    <script type="importmap"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r152/three.min.js"></script>

    <!-- Bootstrap for responsive layout and UI components -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <!-- ================================================================== -->
    <!-- STYLESHEETS -->
    <!-- ================================================================== -->
    <!-- Custom site and project-specific styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/DronePilot.styles.css" asp-append-version="true"/>
</head>

<body>
<!-- ================================================================== -->
<!-- HEADER / NAVIGATION BAR -->
<!-- ================================================================== -->
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Brand and navigation links -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DronePilot</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation items -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- ================================================================== -->
<!-- MAIN CONTENT AREA -->
<!-- ================================================================== -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- ================================================================== -->
<!-- FOOTER -->
<!-- ================================================================== -->
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - DronePilot
    </div>
</footer>

<!-- ================================================================== -->
<!-- SCRIPTS -->
<!-- ================================================================== -->
<!-- Core JS libraries -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional view-specific script sections -->
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
