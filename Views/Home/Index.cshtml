@{
    // ========================================================================
    // VIEW: Drone Controller
    // ========================================================================
    // Defines the main UI layout for the 3D Drone Controller application.
    // Contains the Three.js canvas and associated styling.
    // ========================================================================
    ViewData["Title"] = "Drone Controller";
}

<!-- ===================================================================== -->
<!-- CANVAS CONTAINER -->
<!-- ===================================================================== -->
<div class="canvas-container">
    <canvas id="threeCanvas"></canvas>
</div>

<!-- ===================================================================== -->
<!-- STYLES -->
<!-- ===================================================================== -->
<style>
    /* Main container layout */
    .canvas-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    /* Three.js rendering area */
    #threeCanvas {
        width: 100%;
        height: 100%;
        max-width: 1920px;
        max-height: 1024px;
        border: 4px solid #0ff;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.6);
        background: #87a9c0;
        display: block;
    }
</style>

<!-- ===================================================================== -->
<!-- SCRIPT MODULE -->
<!-- ===================================================================== -->
<script type="module" src="~/js/App.js"></script>